{
  "overrides": [
    {
      "files": ["**/*.html"],
      "options": {
        "printWidth": 1000
      }
    },
    {
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.astro",
        "src/**/*.vue"
      ],
      "options": {
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "importOrderGroupNamespaceSpecifiers": true,
        "importOrder": [
          "^[.][.]/.*(?<![.]css)$",
          "^[.]/.*(?<![.]css)$",
          "^[.][.]/.*(?<=[.]css)$",
          "^[.]/.*(?<=[.]css)$"
        ]
      }
    }
  ]
}
